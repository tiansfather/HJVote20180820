@using Master.Web.Components
@using Master.Web.Views
@inherits MasterRazorPage<TModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Master.Web.Core
@model FormItemViewParam
@{ 
    var formitem = Model.FormItem;
    var inline = formitem.IsInline;
}

<div class="@(inline?"layui-inline":"layui-form-item")">
    <label class="layui-form-label">@formitem.ItemName</label>
    <div class="layui-input-inline">
        <input type="text" name="@formitem.ItemKey" lay-verify="@formitem.VerifyRules" autocomplete="off" class="layui-input" value="@(Model.Value?.ToString())">
    </div>
    <div class="layui-form-mid layui-word-aux">@formitem.Tips</div>
</div>